/*
 * NOTE: :CocLocalConfigを実行すると、./.vim/coc-config.jsonが作成される
 *       このファイルより、ローカルコンフィグの方が優先される
 */
{
  //////////////////////////////////////////////////////////////////////////////
  // coc.nvim本体の設定
  //////////////////////////////////////////////////////////////////////////////
  "workspace.rootPatterns": [".git", ".hg", ".projections.json", ".env"],
  "semanticTokens.enable": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "html",
    "javascript",
    "json",
    "jsonc",
    "json5",
    "lua",
    "php",
    "scss",
    "sql"
  ],
  "codeLens.enable": true,
  "diagnostic.virtualText": true,
  // prettier-ignore
  "diagnostic.floatConfig": {
    "border" : true,
    "rounded": true,
    "shadow" : true
  },
  // prettier-ignore
  "hover.floatConfig": {
    "border" : true,
    "close"  : true,
    "rounded": true,
    "shadow" : true
  },
  "list.floatPreview": true,
  "outline.autoPreview": true,
  "outline.previewBorderRounded": true,
  "outline.sortBy": "position",
  "outline.togglePreviewKey": "p",
  // prettier-ignore
  "suggest.completionItemKindLabels": {
    // NOTE: :h coc-config-suggest-completionItemKindLabels
    //       に定義されているパラメータを、以下を参考に決めた
    //       https://www.nerdfonts.com/cheat-sheet
    "text"         : "v:\ue612",
    "method"       : "f:\uea8c",
    "function"     : "\uf0295",
    "constructor"  : "f:f1949",
    "field"        : "m:\ueb5f",
    "variable"     : "v:\uea88",
    "class"        : "C:\uf0e8",
    "interface"    : "I:\ueb61",
    "module"       : "M:\uf148c",
    "property"     : "m:\ueb65",
    "unit"         : "U:\uf475",
    "value"        : "v:\uf03a6",
    "enum"         : "E:\uf435",
    "keyword"      : "k:\ueb62",
    "snippet"      : "S:\ueb66",
    "color"        : "v:\ue22b",
    "file"         : "\uf471",
    "reference"    : "r:\uf4bd",
    "folder"       : "\uf115",
    "enumMember"   : "m:\uf02b",
    "constant"     : "v:\ueb5d",
    "struct"       : "S:\uf0645",
    "event"        : "E:\uea86",
    "operator"     : "O:\ueb64",
    "typeParameter": "T:\uf278",
    "default"      : "\uf4c3"
  },
  "signature.floatConfig": {
    "border": true,
    "rounded": true,
    "shadow": true
  },
  "suggest.floatConfig": {
    "border": true,
    "rounded": true,
    "shadow": true
  },
  "suggest.virtualText": true,
  //////////////////////////////////////////////////////////////////////////////
  // coc-extensionsの設定
  //////////////////////////////////////////////////////////////////////////////
  /*
   * coc-prettier
   */
  "prettier.enable": true,
  /*
   * coc-snippets
   */
  "snippets.extends": {
    "javascript": ["html", "javascript"]
  },
  "snippets.ultisnips.pythonPrompt": false,
  "snippets.userSnippetsDirectory": "~/.config/nvim/ultisnips",
  /*
   * coc-json
   */
  "json.format.enable": false,
  /*
   * coc-lua
   */
  "Lua.diagnostics.globals": ["vim"],
  /*
   * coc-spell-checker
   */
  "cSpell.userWords": ["denops", "eruby", "fuga", "hoge", "htmldjango"],
  /*
   * coc-html
   */
  "html.format.enable": false,
  "html.filetypes": [
    "blade",
    "handlebars",
    "html",
    "htmldjango",
    "javascript",
    "vue"
  ],
  "html.autoClosingTags": true,
  /*
   * coc-intelephense
   */
  "intelephense.files.associations": ["*.php", "*.blade.php"],
  /*
   * coc-php-cs-fixer
   */
  "php-cs-fixer.enable": false,
  /*
   * coc-solargraph
   */
  "solargraph.diagnostics": true,
  /*
   * coc-eslint
   */
  "eslint.enable": false
}
