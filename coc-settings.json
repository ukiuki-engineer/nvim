  // NOTE: coc-eslintの設定例
  // "eslint.enable": true,
  // "eslint.autoFixOnSave": true,
  // "eslint.filetypes": ["javascript", "vue"],
  "eslint.enable": false,
  "html.autoClosingTags": false,
  // NOTE: intelephense1.9.0 以降だと_ide_helper.phpや_ide_helper_models.phpが上手く効かない
